{
  "manifest_version": 2,

  "name": "Test",
  "description": "This extension is part of a language learning tool",
  "version": "1.0",
  "browser_action": {
    "default_icon": "erik_headshot.png"
  },
  "background": {
    "scripts": ["background.js"] 
  },
  "content_scripts":[
    {
      "matches": ["<all_urls>"], 
      "css": ["contentScript.css"],
      "js": ["jquery.js", "contentScript.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "*://*/",
    "http://*/",
    "https://*/",
    "https://ajax.googleapis.com/"
  ]
}