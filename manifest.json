{
  "manifest_version": 2,

  "name": "Test",
  "description": "This extension shows the text that you highlighted in a text bubble",
  "version": "1.0",

  "browser_action": {
    "default_icon": "erik_headshot.png"
  },
  "content_scripts":[
    {
      "matches": ["http://*/", "https://*/", "*://*/", "<all_urls>"],
      "css": ["contentScript.css"],
      "js": ["contentScript.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "*://*/",
    "http://*/",
    "https://*/",
    "https://ajax.googleapis.com/"
  ]
}